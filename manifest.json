{
  "manifest_version": 2,
  "name": "Chrome Magnets",
  "version" : "0.0.1",

  "description": "Allows users to route magnetic links or .torrents to web service calls.",
  "icons": {
    "16": "img/torrent_16x16.png",
    "48": "img/torrent_48x48.png",
    "128": "img/torrent_128x128.png"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "browser_action": {
    "default_title": "Chrome Magnets",
    "default_icon": "img/torrent_48x48.png",
    "default_popup": "options.html"
  },

  "options_page" : "options.html",

  "permissions" : [
    "contextMenus",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
